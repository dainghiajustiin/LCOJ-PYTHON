import math

def init():

    return

def solve():
    init()

    lst = list(map(int, input().split()))
    lst.sort()

    if(lst[0] + lst[1] > lst[2]):
        p = (lst[0] + lst[1] + lst[2])/2
        s = math.sqrt(p*(p-lst[0])*(p-lst[1])*(p-lst[2]))
        print(lst[0] + lst[1] + lst[2], end = ' ')
        print(f"{s:.2f}")
    else:
        print("NO")

    return

solve()
